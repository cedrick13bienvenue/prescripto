# Production Environment Configuration
NODE_ENV=production
PORT=10000

# Database Configuration (will be set in Render dashboard)
DB_HOST=your_render_db_host
DB_PORT=5432
DB_NAME=prescripto_db
DB_USER=prescripto_user
DB_PASSWORD=your_render_db_password
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h

# QR Code Configuration
QR_ENCRYPTION_KEY=your_qr_encryption_key_here_change_in_production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Frontend URL (update with your actual frontend URL)
FRONTEND_URL=https://your-frontend-domain.com
